<body class="leaderboard-bg">
<h1 class="fav-dogs-h1">Here Are Your Favorite Dogs!</h1>


{{#if favoriteDogs}}
    {{#each favoriteDogs}}
        <section class="card container" id="{{id}}">
            <h1 class="text-dark">{{name}}</h1>
            <h5 class="text-center">Breed: {{breed}}</h5>
            <p class="text-center">Rating: {{rating}}</p>
            <img src="{{url}}" alt="" style="width:auto;" class="mx-1 my-2">
            <button class="btn btn-danger my-2 custom-remove-button" data-dog_id="{{id}}">remove from favorites</button>
        </section>
        <br>  
    {{/each}}
{{else}}
<h1>You Have No Favorite Dogs Yet!</h1>
{{/if}}
</body>

<script src="/js/favorites.js"></script>


