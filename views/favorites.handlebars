<body class="leaderboard-bg">
<h1>Here Are Your Favorite Dogs!</h1>

{{#each favoriteDogs}}
    <section class="card mx-auto" style="width: 27rem;" id="{{id}}">
        <h1 class="text-dark">{{name}}</h1>
        <h5 class="text-center">Breed: {{breed}}</h5>
        <p class="text-center">Rating: {{rating}}</p>
        <img src="{{url}}" alt="" style="width:auto;" class="mx-1 my-2">
        <button class="btn btn-danger my-2" data-dog_id="{{id}}">remove from favorites</button>
    </section>
    <br>  
{{/each}}

</body>

<script src="/js/favorites.js"></script>


